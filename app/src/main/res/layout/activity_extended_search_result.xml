<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExtendedSearchResult">

    <ImageView
        android:id="@+id/image4_1"
        android:layout_width="200dp"
        android:layout_height="200dp" />
    <ImageView
        android:id="@+id/image4_2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_toEndOf="@id/image4_1"
        android:layout_toRightOf="@id/image4_1"/>
    <ImageView
        android:id="@+id/image4_3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/image4_1"/>
    <ImageView
        android:id="@+id/image4_4"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_toEndOf="@id/image4_3"
        android:layout_toRightOf="@id/image4_3"
        android:layout_below="@+id/image4_2"/>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/result_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>




</RelativeLayout>