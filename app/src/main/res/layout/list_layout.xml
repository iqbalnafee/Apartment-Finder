<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/ClickOnR">

    <ImageView
        android:id="@+id/resulted_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/flat2"
        ></ImageView>

        <!--android:background="@drawable/layout_selector"/>-->

    <TextView
    android:id="@+id/PricesOfFlat"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentTop="true"
    android:layout_marginLeft="100dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="40dp"
    android:layout_toEndOf="@+id/resulted_image"
    android:layout_toRightOf="@id/resulted_image"
    android:fontFamily="@font/nunito_semibold"
    android:text="Username"
    android:textColor="#555555"
    android:textSize="16sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="40dp"
        android:layout_toEndOf="@+id/resulted_image"
        android:layout_toRightOf="@id/resulted_image"
        android:fontFamily="@font/nunito_semibold"
        android:text="Price:"
        android:textColor="#555555"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/bedrooms"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PricesOfFlat"
        android:layout_marginLeft="100dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/resulted_image"
        android:layout_toRightOf="@id/resulted_image"
        android:fontFamily="@font/nunito_semibold"
        android:text="Bedrooms:"
        android:textColor="#555555"
        android:textSize="16sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PricesOfFlat"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/resulted_image"
        android:layout_toRightOf="@id/resulted_image"
        android:fontFamily="@font/nunito_semibold"
        android:text="Bedrooms:"
        android:textColor="#555555"
        android:textSize="16sp"
        />
    <TextView
        android:id="@+id/SellORent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/PricesOfFlat"
        android:text="For Sell"
        android:layout_marginLeft="350dp"
        android:fontFamily="@font/nunito_semibold"
        android:textColor="@color/colorRed_A400"/>



</RelativeLayout>