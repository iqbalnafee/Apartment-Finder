<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <android.support.design.widget.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom_nav"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_menu"
        app:itemBackground="@color/com_facebook_blue"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        ></android.support.design.widget.BottomNavigationView>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_nav"
        android:id="@+id/frame"/>
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        app:srcCompat="@drawable/background" />

    <TextView
        android:id="@+id/logAndper"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="8dp"
        android:text="Login and Personalize"
        android:textColor="#008000"
        android:textSize="30dp" />

    <Button
        android:id="@+id/login_option"
        style="@style/com_facebook_button_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logAndper"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="12dp"
        android:text="Log In"
        android:textSize="30dp" />

    <Button
        android:id="@+id/logOut_option"
        style="@style/com_facebook_button_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:textSize="30dp"
        android:layout_marginTop="450dp"
        android:layout_marginLeft="28dp"/>
    <Button
        android:id="@+id/make_ad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="380dp"
        style="@style/com_facebook_button_like"
        android:layout_marginStart="28dp"
        android:layout_marginLeft="28dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="Make Advertisement"
        android:textSize="30dp"/>




</RelativeLayout>